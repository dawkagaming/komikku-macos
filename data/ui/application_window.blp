using Gtk 4.0;
using Adw 1;

template $ApplicationWindow: Adw.ApplicationWindow {
  Adw.Breakpoint breakpoint {
    condition ("max-width: 720sp")
  }

  content: Overlay overlay {
    child: Adw.NavigationView navigationview {};

    [overlay]
    Overlay {
      can-target: false;
      valign: start;

      child: Revealer pool_to_update_revealer {
        can-target: false;
        halign: center;

        child: Adw.Spinner pool_to_update_spinner {
          height-request: 48;
          width-request: 48;

          styles [
            "pool-to-update-spinner",
          ]
        };
      };
    }

    [overlay]
    Overlay {
      can-target: false;
      valign: start;

      child: Revealer notification_revealer {
        can-target: false;
        halign: center;

        child: Box {
          Label notification_label {
            label: "app notification message";
            justify: center;
            wrap: true;

            styles [
              "app-notification",
              "heading",
            ]
          }
        };
      };
    }
  };
}
