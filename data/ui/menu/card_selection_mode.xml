<interface>
    <requires lib="gtk" version="4.0"/>
    <menu id="menu-card-selection-mode">
        <section>
            <item>
                <attribute name="label" translatable="yes">Mark as Read</attribute>
                <attribute name="action">app.card.mark-selected-chapters-read</attribute>
            </item>
            <item>
                <attribute name="label" translatable="yes">Mark as Unread</attribute>
                <attribute name="action">app.card.mark-selected-chapters-unread</attribute>
            </item>
        </section>

        <section>
            <item>
                <attribute name="label" translatable="yes">Select All</attribute>
                <attribute name="action">app.card.select-all-chapters</attribute>
            </item>
        </section>
    </menu>
</interface>
